package main

import (
	"golang.org/x/tour/pic"
)

func Pic(dx, dy int) [][]uint8 {
    picture := make([][]uint8, dx)
    
    for x := 0; x < dx; x++ {
        row := make([]uint8, dy, dy)
        
        for y := 0; y < len(row); y++ {
            row[y]            = uint8(x^y)
            row[len(row)-y-1] = row[y] ^ uint8(x*y)
            
        }
        picture[x] = row
    }
    return picture
}

func main() {
	pic.Show(Pic)
}
